<style>

  nav ul {
    display: flex;
  }

  nav ul li {
    padding-right: 5px;
  }

  @media (max-width: 600px) {
    nav ul li:nth-of-type(1) {
      display: none;
    }
    nav ul li:nth-of-type(4) {
      display: none;
    }
  }
</style>

<nav>
  <ul>
    <li>
      <%= link_to "First", path + "?page=1", role: "button" %>
    </li>
    <li>
      <% if pagy.page > 1 %>
        <%= link_to "Previous", path + "?page=" + (pagy.page - 1).to_s, role: "button"  %>
      <% else %>
        <a href="#" role="button">Previous</a>
      <% end %>
    </li>

    </li>
    <li>
      <% if pagy.page == pagy.last %>
        <a href="#" role="button">Next</a>
      <% else %>
        <%= link_to "Next", path + "?page=" + (pagy.page.next).to_s, role: "button" %>
      <% end %>
    </li>
    <li>
      <%= link_to "Last", path + "?page=" + (pagy.last).to_s, role: "button" %>
    </li>
    <li>
      <%= link_to "New", new_path, role: "button" %>
    </li>
  </ul>
</nav>
