<h1>Edit Supplier Address</h1>

<controls>
  <%= button_tag "Update", form: "address_form", formaction: update_supplier_address_path(params[:supplier_id], params[:address_id]), method: :patch %>
  <%= button_tag "Delete", form: "delete_address_form" %>
  <%= link_to "Back", index_supplier_address_path(params[:supplier_id]), role: "button" %>
</controls>

<%= form_with method: :delete, url: destroy_supplier_address_path(params[:supplier_id], params[:address_id]), :html => {:id => 'delete_address_form'} do |form| %>
  <input type="hidden" name="address_id" value=<%= params[:address_id] %>>
  <input type="hidden" name="supplier_id" value=<%= params[params[:supplier_id]] %>>
<% end %>

<%= render partial: "address_form", locals: { address: @address } %>
